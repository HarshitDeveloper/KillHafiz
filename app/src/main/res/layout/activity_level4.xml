<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.balajiprintec.killhafiz.level4">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/tv_left"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button">

        <ImageView
            android:layout_width="154dp"
            android:layout_height="152dp"

            android:src="@drawable/ee"
            android:id="@+id/bunny4"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/bunny1"
            android:layout_toStartOf="@+id/bunny2" />

        <ImageView
            android:layout_width="154dp"
            android:layout_height="152dp"

            android:src="@drawable/ee"
            android:id="@+id/bunny3"
            android:layout_gravity="bottom"
            android:layout_above="@+id/bunny2"
            android:layout_alignEnd="@+id/bunny2" />

        <ImageView
            android:layout_width="155dp"
            android:layout_height="156dp"

            android:src="@drawable/ee"
            android:id="@+id/bunny2"
            android:layout_gravity="center_vertical"
            android:layout_alignBottom="@+id/bunny4"
            android:layout_toEndOf="@+id/bunny1" />

        <ImageView
            android:layout_width="157dp"
            android:layout_height="153dp"

            android:src="@drawable/ee"
            android:id="@+id/bunny1"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/button"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tv_left"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LEFT: 5"
        android:id="@+id/tv_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SCORE: 0"
        android:id="@+id/tv_score"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go toLevel 1"
        android:onClick="sendMessage6"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignStart="@+id/tv_score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level: 04"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
